<% query_id = "query#{'-inline' if options[:inline]}" %>
<% search_id = "search#{'-inline' if options[:inline]}" %>
<%= form_tag search_path, method: :get, class: "#{options[:inline] ? 'navbar-search form-search-inline' : 'form-search'}" do %>
  <%= text_field_tag :query, params[:query], id: query_id, class: "search-query #{'span11' unless options[:inline]}" %>
  <%= submit_tag 'Search', id: search_id, name: nil, class: "btn #{options[:inline] ? 'btn-mini btn-inverse' : 'btn-large'}",
    onclick: '$.Watermark.HideAll()' %>
  <script type="text/javascript">
    $('form input#<%= query_id %>').Watermark('Search for projects or issues')
  </script>
<% end %>