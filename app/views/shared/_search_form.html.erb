<%= form_tag search_path, method: :get, class: 'form-search' do %>
  <%= text_field_tag :query, params[:query], class: main_page ? 'search-query span9' : 'search-query span11' %>
  <%= submit_tag 'Search', name: nil, class: 'btn btn-large' %>
  <script type="text/javascript">
    $('form input#query').Watermark('Search for projects or issues')
  </script>
<% end %>