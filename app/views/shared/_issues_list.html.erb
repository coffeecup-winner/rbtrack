<section class="issues-list">
  <div>
    <h2><%= header %> <%= content_tag :span, "(#{issues.count})", class: 'count' %></h2>
    <%= link_to 'Report an issue', new_issue_path(project: project_id), class:'btn btn-primary' %>
  </div>
  <div class="list">
    <ul>
      <% issues.each do |issue| %>
        <li><span class="id">#<%= issue.id %></span>
          <% if project_id.nil? %>
            (<%= link_to issue.project.name, issue.project %>)
          <% end %>
          <%= link_to issue.subject, issue %></li>
      <% end %>
    </ul>
  </div>
</section>