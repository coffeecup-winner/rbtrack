<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <section id="projects-list">
      <div>
        <h2>Projects <%= content_tag :span, "(#{@user.projects.count})", class: 'count' %></h2>
        <%= link_to 'Create new project', new_project_path, class:'btn btn-primary' %>
      </div>
      <div class="list">
          <ul>
            <% @user.projects.each do |project| %>
              <li><%= link_to project.name, project %></li>
            <% end %>
          </ul>
      </div>
    </section>
    <div>
      <%= render 'shared/issues_list', header: 'Reported issues', issues: @user.opened_issues, project_id: nil %>
    </div>
  </div>
</div>