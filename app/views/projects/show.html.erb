<% provide(:title, @project.name) %>
<h1><%= @project.name %></h1>
<div class="row-fluid">
  <aside class="span4">
    <h2>Team</h2>
    <div id="team">
      <ul>
        <% @project.users.each do |user| %>
          <%= gravatar_for @project.owner, size: 32 %>
          <% if user == @project.owner %>
            <li class="owner"><%= link_to user.name, user %></li>
          <% else %>
            <li><%= link_to user.name, user %></li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </aside>
  <div class="span8">
    <%= render 'shared/issues_list',
               project_id: @project.id,
               issues_lists: [ { issues: @project.active_issues, header: 'Active' },
                               { issues: @project.closed_issues, header: 'Closed' } ] %>
  </div>
</div>